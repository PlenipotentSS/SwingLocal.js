nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
  .navigation-wrapper
    .navbar-header(style="width: 100%;")
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Swing Local
      .collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li.nav-item(class=isActive('/'))
            a(href="/", title="Swing Local Home") Home
          - if (req.isAuthenticated())
            li.nav-item(class=isActive('/dashboard'))
              a(href="/dashboard/"+req.user.id+"/profile", title="Profile") Profile
            li.nav-item
              a(href="/logout", title="logout") Logout
          - else
            li.nav-item(class=isActive('/login') ? 'active' : '')
              a(href="/login", title="Login") Login
